pipeline {
    agent any

    environment{
        my_tag = "v.1"
        //my_tag = my_tag
    }
     
    

    stages{
        stage('Build'){
            steps{
                sh 'mvn clean package'
                sh "docker build . -t tomcatwebapp:${env.BUILD_ID}"
                sh "echo ${my_tag}"
            }

        }
        stage('Run'){
            steps{
                sh "docker run -p 8282:8080 tomcatwebapp:${env.BUILD_ID}"
            }

        }
    }
}
